---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Explore Gavin's portfolio. Check out projects, skills, and more." />
		<meta property="og:title" content="Gavin - Web Developer Portfolio" />
		<meta property="og:url" content="https://www.goiamo.dev" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Anton&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
		<link rel="icon" type="image/x-icon" href="../../public/favicon.ico">
		<title>{title}</title>
	</head>
	<body>
		</div>
		<main>
			<Header></Header>
			<slot />
			<Footer></Footer>
		</main>
		<script async defer src="https://www.google.com/recaptcha/enterprise.js?render=6LfFhCUqAAAAAM9bDteptB1xCa4GPfVAq2-rNIMx"></script>
	</body>
	<style>
		body {
			background-color: var(--primary-color);
			color: var(--font-color);
		}
	</style>
	<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
	<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</html>